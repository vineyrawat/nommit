{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nommit",
  "version": "0.1.0",
  "identifier": "com.vinaybyte.nommit",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Nommit",
        "width": 800,
        "height": 600,
        "minHeight": 600,
        "minWidth": 800,
        "resizable": true,
        "visible": false,
        "fullscreen": true
      },
      {
        "label": "login",
        "title": "Login",
        "url": "/init",
        "width": 300,
        "height": 400,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
